<div>
	<div class="avatar left">
		<%= image_tag twitt.twitter_user.profile_image_url %>
	</div>
	<div class="twitt_body left">
		<p><b><%= link_to twitt.twitter_user.screen_name, twitter_user_path(twitt.twitter_user) %></b></p>
    <p><%= twitt.body %></p>
    <span class="left twitt_info">
      <%= twitt.originally_created.strftime("%H:%M %d.%m.%Y") %> przez <%= source(twitt) %>
    </span>
	  <span class="right">
	    <%= link_to 'Usuń', twitt, :confirm => 'Czy na pewno chcesz usunąć?', :method => :delete if current_user %>
	  </span>
	  <%= clear %>
  </div>
  <%= clear %>
</div>
<hr />