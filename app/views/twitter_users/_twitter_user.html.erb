<div class="user">
	<div class="avatar left">
	  <%= image_tag twitter_user.profile_image_url %>
	</div>
	<div class="left">
		<p>
		  <b><%= link_to twitter_user.name, twitter_user_path(twitter_user) %></b>
	  </p>
    <p>
	    napisał <%= twitter_user.statuses_count %> tweetów | 
      ma <%= twitter_user.followers_count %> followerów |
      followuje <%= twitter_user.friends_count %> kont |
      jest na <%= twitter_user.listed_count %> listach
    </p>
  </div>
  <%= clear %>
</div>
<hr />