<h1>Kandydaci na prezydenta RP 2010 na Twitterze</h1>
<% if @twitts_1 %>
	<div class="candidate" style="width:<%= @width %>">
		<% form_tag(:action => :hide) do %>
			<%= hidden_field_tag "id", "1" %>
			<%= submit_tag('x') %>
		<% end %>
	  <%= image_tag @avatar_1.url if @avatar_1 %>
	  <h2><%= @twitts_1.first.username if @twitts_1 !=[] %></h2>
	  <%= clear %>
	  <%= render :partial => 'twitt', :collection => @twitts_1 %>
	</div>
<% end %>
